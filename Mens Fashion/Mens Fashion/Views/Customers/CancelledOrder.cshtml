@using Mens_Fashion.Models


@{
    
    Model3 db = new Model3();
    Customer c = (Customer)Session["Customer"];
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    ViewBag.Title = "Cancelled Order";
}
<center><h2>Cancelled Order</h2></center></br>
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping__cart__table">
               
                    <table class="table table-bordered table-hover">
                        

                            <thead>
                                <tr>


                                    <th>Order Date</th>
                                    <th>Customer Name</th>
                                    <th>Customer Email</th>
                                    <th>Customer Address</th>
                                    <th>Customer Contact</th>
                                    <th>Order Status</th>
                                   
                                    <th colspan="2">Order</th>
                                </tr>
                            </thead>
                            @foreach (var o in db.Orders.Where(x => x.ORDER_TYPE == "Sale" & x.STATUS == "Cancelled" ))
                            {

                                if (o.CUSTOMER_FID == c.CUSTOMER_ID)
                                {

                            <tr>


                                <td align="center">@DateTime.Parse(o.ORDER_DATE.ToString()).ToLongDateString()</td>
                                <td align="center">@o.ORDER_NAME</td>
                                <td align="center">@o.ORDER_EMIAL</td>
                                <td align="center">@o.ORDER_ADDRESS</td>
                                <td align="center">@o.ORDER_CONTACT</td>
                                <td align="center">@o.STATUS</td>

                                <td align="center"><a href="@Url.Action("Invoice", "Customers", new { id = o.ORDER_ID })" class="primary-btn btn-sm">Invoice</a></td>
                                <td align="center"><a href="@Url.Action("OrderActivate", "Customers", new { id = o.ORDER_ID })" class="primary-btn btn-sm">Activate?</a></td>

                            </tr>
                                }
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
              
    </section>

   