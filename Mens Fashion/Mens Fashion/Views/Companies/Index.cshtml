@model IEnumerable<Mens_Fashion.Models.Company>

@{
    ViewBag.Title = "Index";
}

<h2>Company Information</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table  table-bordered table-hover ">
<tr style="background-color:indianred;color:white">
    <th>
        NAME
    </th>
    <th>
        EMAIL
    </th>
    <th>
        CONTACT
    </th>
    <th>
        ADDRESS
    </th>
    <th>
        LOGO
    </th>
    <th>
        About
    </th>
    <th></th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.COMPANY_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COMPANY_EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COMPANY_CONTACT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COMPANY_ADDRESS)
        </td>
        <td>
            <img src="@Url.Content(item.COMPANY_LOGO)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COMPANY_ABOUT)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.COMPANY_ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.COMPANY_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.COMPANY_ID })
        </td>
    </tr>
}

</table>
