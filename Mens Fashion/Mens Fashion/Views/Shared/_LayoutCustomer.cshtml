@using Mens_Fashion.Models
@{Model3 db = new Model3(); }


<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Male_Fashion Template">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> @db.Companies.Select(x => x.COMPANY_NAME).FirstOrDefault() </title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap"
          rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/Content/Customer/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Customer/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Customer/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Customer/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Customer/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Customer/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Customer/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Customer/css/style.css" type="text/css">
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__option">
            <div class="offcanvas__links">
                @if (Session["Customer"] == null)
                {
                    <a href="@Url.Action("Login", "Customers")">log in</a>
                    <a href="@Url.Action("Create", "Customers")">Sign up</a>
                }
                else
                {
                    <a href="@Url.Action("Logout", "Customers")">log out</a>
                }
            </div>
            
        </div>
        <div class="offcanvas__nav__option">
            <a href="#" class="search-switch"><img src="@Url.Content( db.Companies.Select(x => x.COMPANY_LOGO).FirstOrDefault())" alt=""></a>

            <a href="#"><img src="~/Content/Customer/img/icon/cart.png" alt=""> 
            <span >0
           </span></a>

        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__text">
            <p> @db.IndexPageDetails.Select(x => x.ALERT).FirstOrDefault()</p>
        </div>
    </div>
    <!-- Offcanvas Menu End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7">
                        <div class="header__top__left">
                            <p>@db.IndexPageDetails.Select(x => x.ALERT).FirstOrDefault()</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-5">
                        <div class="header__top__right">
                            <div class="header__top__links">
                                @if (Session["Customer"] == null)
                                {
                                    <a href="@Url.Action("Login", "Customers")">log in</a>
                                    <a href="@Url.Action("Create", "Customers")">Sign up</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Logout", "Customers")">log out</a>
                                }

                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <a href="@Url.Action("IndexCustomer","Home")"><img src="@Url.Content( db.Companies.Select(x => x.COMPANY_LOGO).FirstOrDefault())" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="active"><a href="@Url.Action("IndexCustomer","Home")">Home</a></li>
                            <li><a href="@Url.Action("DisplayProduct","Home")">Shop</a></li>
                            <li>
                                <a href="#">Customer</a>
                                <ul class="dropdown">
                                    <li><a href="@Url.Action("Cart", "Home")">Shopping Cart</a></li>
                                    @if (Session["Customer"] != null)
                                    {
                                        
                                        <li><a href="@Url.Action("Index", "Customers")">Manage Account</a></li>
                                        <li><a href="@Url.Action("CancelledOrder","Customers")">Cancelled Order </a></li>
                                        <li><a href="@Url.Action("CustomerHistory", "Customers")">Order History</a></li>
                                        <li><a href="@Url.Action("Logout", "Customers")">Log Out</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("Create","Customers")">Create Account</a></li>
                                        <li><a href="@Url.Action("Login","Customers")">Customer Login</a></li>

                                    }
                                </ul>
                            </li>


                            <li><a href="@Url.Action("About","Home")">About Us</a></li>
                            <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option">

                        
                        <a href="@Url.Action("Login","Home")"><img src="~/Content/Customer/img/icon/user.png" alt=""></a>
                        <a href="@Url.Action("Cart","Home")"><img src="~/Content/Customer/img/icon/cart.png" alt=""> <span>0</span></a>

                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </header>
    <!-- Header Section End -->


    @RenderBody()



    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__widget">
                            <h6> @db.Companies.Select(x => x.COMPANY_NAME).FirstOrDefault()</h6>
                        </div>
                        <p>@db.IndexPageDetails.Select(x => x.FOOTER_DESCRIPTION).FirstOrDefault()</p>
                        
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="footer__widget">
                        <h6>Shopping</h6>
                        <ul>
                            <li><a href="@Url.Action("Contact","Home")">Contact Us</a></li>
                            <li><a href="@Url.Action("PaymentMethode","Home")">Payment Methods</a></li>
                            <li><a href="@Url.Action("Delivery","Home")">Delivary</a></li>
                            <li><a href="@Url.Action("Return","Home")">Return & Exchanges</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 offset-lg-1 col-md-6 col-sm-6">
                    <div class="footer__widget">
                        <h6>Contact</h6>
                        <div class="footer__newslatter">


                            <p>
                                <b>Address  </b> @db.Companies.Select(x => x.COMPANY_ADDRESS).FirstOrDefault() <br />
                                <b>Contact  </b>@db.Companies.Select(x => x.COMPANY_CONTACT).FirstOrDefault()<br />
                                <b>Email  </b>@db.Companies.Select(x => x.COMPANY_EMAIL).FirstOrDefault()<br />

                            </p>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->
    <!-- Js Plugins -->
    <script src="~/Content/Customer/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/Customer/js/bootstrap.min.js"></script>
    <script src="~/Content/Customer/js/jquery.nice-select.min.js"></script>
    <script src="~/Content/Customer/js/jquery.nicescroll.min.js"></script>
    <script src="~/Content/Customer/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/Customer/js/jquery.countdown.min.js"></script>
    <script src="~/Content/Customer/js/jquery.slicknav.js"></script>
    <script src="~/Content/Customer/js/mixitup.min.js"></script>
    <script src="~/Content/Customer/js/owl.carousel.min.js"></script>
    <script src="~/Content/Customer/js/main.js"></script>
</body>

</html>