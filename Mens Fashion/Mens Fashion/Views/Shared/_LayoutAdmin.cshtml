
@using Mens_Fashion.Models


@{ 
    Model3 db = new Model3();
    Admin a=db.Admins.FirstOrDefault();
    if (Session["Admin"] == null)
    {
        Response.Redirect("/Home/Login");
    }
    else
    {
        a = (Admin)Session["Admin"];
    }
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @db.Companies.Select(x => x.COMPANY_NAME).FirstOrDefault() Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/Admin/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/Admin/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <link href="~/Content/Admin/assets/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Content/Admin/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("IndexAdmin","Home")">@a.ADMIN_NAME</a>
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;">@System.DateTime.Now.ToLongDateString()  @System.DateTime.Now.ToLongTimeString() &nbsp;<a href="@Url.Action("IndexCustomer","Home")" class="btn btn-danger square-btn-adjust">Logout</a></div>
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">



                    <li>
                        <a href="@Url.Action("IndexAdmin","Home")"><i class="fa fa-dashboard fa-3x"></i> Dashboard</a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index","Admins")"><i class="fa fa-group fa-3x"></i> Manage Account</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Companies")"><i class="fa fa-book fa-3x"></i> Manage Company Details</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","IndexPageDetails")"><i class="fa fa-desktop fa-3x"></i> Manage Index Page</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Categories")"><i class="fa fa-bars fa-3x"></i> Manage Category</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Products")"><i class="fa fa-archive fa-3x"></i> Manage Products</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Purchase","Purchase")"><i class="fa fa-shopping-cart fa-3x"></i> Manage Purchase</a>
                    </li>



                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-3x"></i> Reports<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("StockReport","Reports")">Stock Report</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProfitandLossReport","Reports")">Profit & Loss Report</a>
                            </li>
                            <li>
                                <a href="#">Transaction Report<span class="fa arrow"></span></a>
                                <ul class="nav nav-third-level">
                                    <li>
                                        <a href="@Url.Action("PurchaseReport","Reports")">Purchase Report</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("SaleReport","Reports")">Sale Report</a>
                                    </li>


                                </ul>

                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Feedback","Home")"><i class="fa fa-comments-o fa-3x"></i>Customer Queries</a>
                    </li>
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->

        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Admin Dashboard</h2>
                        <h5>Welcome @a.ADMIN_NAME , Love to see you back. </h5>

                    </div>
                </div>
                <!-- /. ROW  -->



                @RenderBody()

            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Content/Admin/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Content/Admin/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/Content/Admin/assets/js/jquery.metisMenu.js"></script>
    <!-- MORRIS CHART SCRIPTS -->
    <script src="~/Content/Admin/assets/js/morris/raphael-2.1.0.min.js"></script>
    <script src="~/Content/Admin/assets/js/morris/morris.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/Admin/assets/js/custom.js"></script>


</body>
</html>
